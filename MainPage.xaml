<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FieldNotesApp.MainPage">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Sticky Top Menu using Border -->
        <Border Grid.Row="0"
                BackgroundColor="Grey"
                StrokeShape="RoundRectangle 0,0,20,20"
                VerticalOptions="Start"
                HorizontalOptions="Fill"
                HeightRequest="60">
            <!-- Set fixed height -->
            <HorizontalStackLayout Spacing="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center">
                <Label Text="Saved Notes"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,0,0,
                       0" />
            </HorizontalStackLayout>
        </Border>
        
        <!-- Entries list -->
        <ScrollView Grid.Row="1"
                    Margin="0,0,0,0"
                    Padding="10">
            <VerticalStackLayout x:Name="EntriesContainer"
                                 Spacing="10">
                <CollectionView x:Name="EntriesCollectionView"
                                SelectionMode="Single"
                                SelectionChanged="OnEntrySelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10"
                                    StrokeShape="RoundRectangle 20,20,20,20"
                                    Margin="0,5"
                                    Stroke="LightGray">
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0">
                                        <Label Text="{Binding Id}"
                                               FontSize="12"
                                               TextColor="Gray" />
                                        <Label Text="{Binding MediaTypeDisplay}"
                                               FontSize="14"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding CreatedAt, StringFormat='{0:MM/dd/yyyy HH:mm}'}"
                                               FontSize="12" />
                                    </VerticalStackLayout>
                                    <Label Grid.Column="1"
                                           FontFamily="FASolid"
                                           Text="&#xf1f8;"
                                           FontSize="24"
                                           VerticalOptions="Center" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        

        <!-- Sticky Bottom Menu using Border -->
        <Border Grid.Row="2"
                BackgroundColor="Grey"
                StrokeShape="RoundRectangle 20,20,0,0"
                Padding="10"
                VerticalOptions="End"
                HorizontalOptions="Fill"
                HeightRequest="60">
            <!-- Set fixed height -->
            <HorizontalStackLayout Spacing="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center">
                <Button x:Name="TakePhotoButton"
                        Text="Take Photo"
                        Clicked="OnTakePhotoClicked"
                        HorizontalOptions="Center" />
                <Button x:Name="TakeVideoButton"
                        Text="Record Video"
                        Clicked="OnRecordVideoClicked"
                        HorizontalOptions="Center" />
            </HorizontalStackLayout>
        </Border>
    </Grid>

</ContentPage>
