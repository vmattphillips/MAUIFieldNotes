<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FieldNotesApp.MainPage">

    <Grid RowDefinitions="Auto,*">
        <!-- Sticky Top Menu using Border -->
        <Border Grid.Row="0"
                BackgroundColor="Grey"
                StrokeShape="RoundRectangle 0,0,20,20"
                VerticalOptions="Start"
                HorizontalOptions="Fill"
                HeightRequest="60">
            <!-- Set fixed height -->
            <HorizontalStackLayout Spacing="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center">
                <Label Text="Saved Notes"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,0,0,
                       0" />
            </HorizontalStackLayout>
        </Border>
        
        <!-- Entries list -->
        <ScrollView Grid.Row="1"
                    Margin="0,0,0,0"
                    Padding="10">
            <VerticalStackLayout x:Name="EntriesContainer"
                                 Spacing="10">
                <CollectionView x:Name="EntriesCollectionView"
                                SelectionMode="Single"
                                SelectionChanged="OnEntrySelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10"
                                    StrokeShape="RoundRectangle 20,20,20,20"
                                    Margin="0,5"
                                    Stroke="LightGray">
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0">
                                        <!--<Label Text="{Binding Id}"
                                               FontSize="12"
                                               TextColor="Gray" />-->
                                        <Label Text="{Binding Id, StringFormat='NoteID {0}'}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding NumOfMedia, StringFormat='Number of Items: {0}'}"
                                               FontSize="14" />
                                        <Label Text="{Binding CreatedAt, StringFormat='Last Edit: {0:MM/dd/yyyy HH:mm}'}"
                                               FontSize="12" />
                                    </VerticalStackLayout>
                                    <Border Grid.Column="1"
                                            StrokeThickness="0"
                                            BackgroundColor="#FFEBEE"
                                            StrokeShape="RoundRectangle 20"
                                            Padding="12"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Center">
                                        <Label FontFamily="FASolid"
                                               Text="&#xf1f8;"
                                               FontSize="24"
                                               TextColor="#D32F2F"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Center" />
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnDeleteTapped" />
                                        </Border.GestureRecognizers>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        

        
        <!--Old Bottom Menu-->
        <!-- Sticky Bottom Menu using Border --><!--
        <Border Grid.Row="2"
                BackgroundColor="Grey"
                StrokeShape="RoundRectangle 20,20,0,0"
                Padding="10"
                VerticalOptions="End"
                HorizontalOptions="Fill"
                HeightRequest="60">
            --><!-- Set fixed height --><!--
            <HorizontalStackLayout Spacing="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center">
                <Button x:Name="AddEntryButton"
                        Text="Add Entry"
                        Clicked="OnAddEntryClicked"
                        HorizontalOptions="End" />
                <Button x:Name="TakePhotoButton"
                        Text="Take Photo"
                        Clicked="OnTakePhotoClicked"
                        HorizontalOptions="Center" />
                <Button x:Name="TakeVideoButton"
                        Text="Record Video"
                        Clicked="OnRecordVideoClicked"
                        HorizontalOptions="Center" />
            </HorizontalStackLayout>
        </Border>-->

        <!-- Floating Action Button Menu -->
        <AbsoluteLayout Grid.Row="1">
            <!-- Overlay background -->
            <BoxView x:Name="MenuOverlay"
                     Color="Black"
                     Opacity="0"
                     IsVisible="False"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped" />
                </BoxView.GestureRecognizers>
            </BoxView>

            <!-- Menu Items -->
            <VerticalStackLayout x:Name="MenuItems"
                                 Spacing="15"
                                 IsVisible="False"
                                 AbsoluteLayout.LayoutBounds="1,1,AutoSize,AutoSize"
                                 AbsoluteLayout.LayoutFlags="PositionProportional"
                                 Margin="0,0,20,100">

                <Border StrokeThickness="0"
                        StrokeShape="RoundRectangle 25"
                        Padding="20,15"
                        Shadow="{Shadow Brush=Black, Offset='0,2', Radius=6, Opacity=0.3}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,1">
                            <GradientStop Color="#2196F3"
                                          Offset="0.0" />
                            <GradientStop Color="#1976D2"
                                          Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <HorizontalStackLayout Spacing="10">
                        <!--<Label Text="📷"
                               FontSize="20"
                               VerticalOptions="Center" />-->
                        <Label Text="Add from Gallery"
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddExistingClicked" />
                    </Border.GestureRecognizers>
                </Border>

                <Border StrokeThickness="0"
                        StrokeShape="RoundRectangle 25"
                        Padding="20,15"
                        Shadow="{Shadow Brush=Black, Offset='0,2', Radius=6, Opacity=0.3}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,1">
                            <GradientStop Color="#FF9800"
                                          Offset="0.0" />
                            <GradientStop Color="#F57C00"
                                          Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <HorizontalStackLayout Spacing="10">
                        <!--<Label Text="📸"
                               FontSize="20"
                               VerticalOptions="Center" />-->
                        <Label Text="Take Photo"
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTakePhotoClicked" />
                    </Border.GestureRecognizers>
                </Border>

                <Border StrokeThickness="0"
                        StrokeShape="RoundRectangle 25"
                        Padding="20,15"
                        Shadow="{Shadow Brush=Black, Offset='0,2', Radius=6, Opacity=0.3}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,1">
                            <GradientStop Color="#E91E63"
                                          Offset="0.0" />
                            <GradientStop Color="#C2185B"
                                          Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <HorizontalStackLayout Spacing="10">
                        <!--<Label Text="🎥"
                               FontSize="20"
                               VerticalOptions="Center" />-->
                        <Label Text="Record Video"
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRecordVideoClicked" />
                    </Border.GestureRecognizers>
                </Border>
            </VerticalStackLayout>

            <!-- Main FAB Button -->
            <Border x:Name="FabButton"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 30"
                    WidthRequest="60"
                    HeightRequest="60"
                    AbsoluteLayout.LayoutBounds="1,1,AutoSize,AutoSize"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    Margin="0,0,20,20"
                    Shadow="{Shadow Brush=Black, Offset='0,4', Radius=8, Opacity=0.3}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1,1">
                        <GradientStop Color="#4CAF50"
                                      Offset="0.0" />
                        <GradientStop Color="#45a049"
                                      Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Label x:Name="FabIcon"
                       Text="+"
                       FontSize="36"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="0,-2,0,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFabClicked" />
                    </Label.GestureRecognizers>
                </Label>
            </Border>
        </AbsoluteLayout>
    </Grid>

</ContentPage>
